{
  "name": "pythia",
  "displayName": "Pythia",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pythia.openWebview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pythia-sidebar-view",
          "title": "Pythia",
          "icon": "media/eye.svg"
        }
      ]
    },
    "views": {
      "pythia-sidebar-view": [
        {
          "type": "webview",
          "id": "pythia-sidebar",
          "name": "Pythia",
          "icon": "media/eye.svg",
          "contextualTitle": "Pythia??"
        }
      ]
    },
    "commands": [
      {
        "command": "pythia.showProgress",
        "category": "Pythia",
        "title": "Loading?"
      },
      {
        "command": "pythia.startListening",
        "category": "Pythia",
        "title": "Start Listening"
      },
      {
        "command": "pythia.stopListening",
        "category": "Pythia",
        "title": "Stop Listening"
      },
      {
        "command": "pythia.clearChat",
        "title": "Clear Chat History",
        "icon": "media/clear-all.svg"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "pythia.clearChat",
          "when": "view == pythia-sidebar"
        }
      ],
      "view/title": [
        {
          "command": "pythia.clearChat",
          "when": "view == pythia-sidebar",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "npm-run-all --parallel watch:*",
    "watch:ext": "webpack --mode development --watch --config ./webpack/extension.config.js",
    "watch:wv": "webpack serve --mode development --config ./webpack/webview.config.js",
    "package": "npm run clean && npm-run-all --parallel package:*",
    "package:ext": "webpack --mode production --config ./webpack/extension.config.js",
    "package:wv": "webpack --mode production --config ./webpack/webview.config.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "clean": "rimraf dist",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@estruyf/vscode": "^1.1.0-beta.3196622",
    "@types/event-source-polyfill": "^1.0.2",
    "@types/eventsource": "^1.1.12",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-syntax-highlighter": "^15.5.6",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "css-loader": "^6.7.1",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "bufferutil": "^4.0.7",
    "event-source-polyfill": "^1.0.31",
    "eventsource": "^2.0.2",
    "react-copy-to-clipboard": "^5.1.0",
    "react-markdown": "^8.0.6",
    "react-syntax-highlighter": "^15.5.0",
    "socket.io-client": "^4.6.1",
    "utf-8-validate": "^5.0.10"
  }
}
